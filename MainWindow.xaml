<Window x:Class="FolderIconizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FolderIconizer"
        mc:Ignorable="d"
        Title="Folder Iconizer" Height="450" Width="800" Icon="/Icon.png">
    <Grid>
        <Label Content="Folder Path" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbFolderPath" Margin="10,35,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <CheckBox x:Name="cbParentFolder" Content="Update This Folder" HorizontalAlignment="Left" Margin="10,58,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <CheckBox x:Name="cbSubFolders" Content="Update Level 1 SubFolders" HorizontalAlignment="Left" Margin="168,58,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <Button x:Name="cbProcess" Content="Process" HorizontalAlignment="Left" Margin="10,93,0,0" VerticalAlignment="Top" Click="cbProcess_Click"/>
        <Label Content="Log" HorizontalAlignment="Left" Margin="10,117,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbLogs" Margin="10,148,10,10" TextWrapping="Wrap" Text=""/>


    </Grid>
</Window>
